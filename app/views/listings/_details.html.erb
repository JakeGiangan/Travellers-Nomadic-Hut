<div role="tabpanel" class="tab-pane fade show active" id="tab-1">
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <h3>Description</h3>
                    <hr />
                    <p class="MontserratFont">
                    <em> <strong> House Type: </strong> </em> &nbsp <%=  @listing.home_type %>  <br />
                    <em> <strong> Room Type: </strong> </em> &nbsp <%=  @listing.room_type %> 
                    </p>
                    <p class="MontserratFont"> <%= @listing.listing_description%> </p>                    
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <h3>Details</h3>
                    <hr />
                    <div class="row MontserratFont">
                        <div class="border rounded border-dark amenitiesIcons">
                            <i class="fa fa-home d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                            <p class="text-center">
                            <%= @listing.home_type %></p>
                        </div>
                        <div class="border rounded border-dark amenitiesIcons">
                            <i class="fa fa-user d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                            <p class="text-center">
                            <%= pluralize(@listing.accomodate, "Guest") %></p>
                        </div>
                        <div class="border rounded border-dark amenitiesIcons">
                            <i class="fa fa-bed d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                            <p class="text-center"><%= pluralize(@listing.bedroom_count, "Bedroom") %></p>
                        </div>
                        <div class="border rounded border-dark amenitiesIcons">
                            <i class="fa fa-shower d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                            <p class="text-center">
                            <%= pluralize(@listing.bathroom_count, "Bathroom") %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <h3>Facilities & Amenities</h3>
                    <hr />
                    <div class="row MontserratFont">
                        <% if @listing.has_internet %>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-wifi d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center">Has Wifi Connection</p>
                            </div>
                        <% end %>
                        <% if @listing.has_tv %>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-swimming-pool d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center">Has TV</p>
                            </div>
                        <% end %>
                        <% if @listing.has_heating %>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-mitten d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center">Heating</p>
                            </div>
                        <% end %>
                        <% if @listing.has_kitchen %>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-utensils d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center">Has kitchen</p>
                            </div>
                        <% end %>
                        <% if @listing.has_air_conditioning %>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-fan d-xl-flex justify-content-xl-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center">Air conditioning</p>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="border rounded border-success" style="width: 550px;height: 420px;margin-top: 25px;">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col-xl-3">
                                <h2 class="MontserratFont" style="margin-top: 45px;margin-left: 38px;">$<%= @listing.price%></h2>
                            </div>
                            <div class="col-xl-9">
                                <p style="margin-top: 59px;">/night</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top: 20px;">
                    <div class="col"><input type="date" style="margin -right: 30px;margin-left: 30px;" /></div>
                    <div class="col"><input type="date" style="margin-right: 30px;margin-left: 30px;" /></div>
                </div>
                <hr style="width: 485px;" />
                <div class="row MontserratFont">
                    <div class="col">
                        <p class="text-center">PRICE</p>
                    </div>
                    <div class="col">
                        <p class="text-center">$<%= @listing.price %></p>
                    </div>
                </div>
                <div class="row MontserratFont">
                    <div class="col">
                        <p class="text-center">Night(s)</p>
                    </div>
                    <div class="col">
                        <p class="text-center">$ computed nights </p>
                    </div>
                </div>
                <hr style="width: 485px;" />
                <div class="row">
                    <div class="col">
                        <h4 class="text-center">TOTAL</h4>
                    </div>
                    <div class="col">
                        <p class="text-center MontserratFont">$total price</p>
                    </div>
                </div>
                <div class="row text-center d-xl-flex justify-content-xl-center">
                    <div class="col text-center d-xl-flex justify-content-xl-center"><button class="btn btn-success d-xl-flex roundedButton" type="button" >RESERVE</button></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 20px;margin-bottom: 130px;">
        <div class="col">
            <h3>Location</h3>
            <hr />
            <div class="row">
                <div class="col">
                    <p> Google Maps Here </p>                 
                </div>
            </div>
        </div>
    </div>
</div>
