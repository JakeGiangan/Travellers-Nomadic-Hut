<div class="row">
    <div class="col">
        <div><a class="btn btn-primary" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-1" href="#collapse-1" role="button">Show Filters</a>
            <%= search_form_for @search, url: search_path do |f| %>
                <div class="collapse" id="collapse-1" style="margin-top:25px;">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <div class="row">
                                            <div class="col">
                                                <hr style="background-color: #16f063;" />
                                            </div>
                                        </div>
                                        <div class="row" style="margin-bottom: 15px;">
                                            <div class="col">
                                                <%= f.number_field :price_gteq, class: "col-lg-12 roundedFormField", placeholder: "min price" %>
                                            </div>
                                            <div class="col">
                                                <%= f.number_field :price_lteq, class: "col-lg-12 roundedFormField", placeholder: "max price" %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 15px;">
                                    <div class="col">
                                        <div class="row">
                                            <div class="col">
                                                <hr style="background-color: #16f063;" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <div class="form-check">
                                                    <%= f.check_box :has_internet_true ,class: "form-check-input" %>
                                                    <label class="form-check-label" for="formCheck-1">Internet &amp; WiFi</label>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-check">
                                                    <%= f.check_box :has_tv_true ,class: "form-check-input" %>
                                                    <label class="form-check-label" for="formCheck-1">TV</label>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-check">
                                                    <%= f.check_box :has_kitchen_true ,class: "form-check-input" %>
                                                    <label class="form-check-label" for="formCheck-1">Kitchen</label>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-check">
                                                    <%= f.check_box :has_heating_true ,class: "form-check-input" %>
                                                    <label class="form-check-label" for="formCheck-1">Heating</label>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-check">
                                                    <%= f.check_box :has_air_conditioning_true ,class: "form-check-input" %>
                                                    <label class="form-check-label" for="formCheck-1">Air Conditioner</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 15px;">
                                    <div class="col">
                                        <h6>House Type</h6>
                                        <div class="row">
                                            <div class="col">
                                                <%= f.select :home_type_eq, options_for_select([
                                                        ["Condominium"],
                                                        ["Resort"],
                                                        ["Hotel"],
                                                        ["Beach House"], 
                                                        ["Apartment"],
                                                        ["Capsule Room"]
                                                    ], selected: f.object.home_type_eq), {}, class: "roundedFormField col-lg-12", :prompt => "Select Value"
                                                %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <h6>Bedrooms</h6>
                                        <div class="row">
                                            <div class="col">
                                                <%= f.select :bedroom_count_gteq, options_for_select([
                                                        ["1 Bedroom", 1],
                                                        ["2 Bedrooms", 2],
                                                        ["3 Bedrooms", 3],
                                                        ["4+ Bedrooms", 4]
                                                    ], selected: f.object.bedroom_count_gteq), {}, class: "roundedFormField col-lg-12", :prompt => "Select Value"
                                                %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <h6>Bathrooms</h6>
                                        <div class="row">
                                            <div class="col">
                                                <%= f.select :bathroom_count_gteq, options_for_select([
                                                        ["1 Bathroom", 1],
                                                        ["2 Bathrooms", 2],
                                                        ["3 Bathrooms", 3],
                                                        ["4+ Bathrooms", 4]
                                                    ], selected: f.object.bathroom_count_gteq), {},  class: "roundedFormField col-lg-12"
                                                %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <h6>Accomodation</h6>
                                        <div class="row">
                                            <div class="col">
                                                <%= f.select :accomodate_gteq, options_for_select([
                                                        ["1 Guest", 1],
                                                        ["2 Guests", 2],
                                                        ["3 Guests", 3],
                                                        ["4+ Guests", 4]
                                                    ], selected: f.object.accomodate_gteq), {}, class: "roundedFormField col-lg-12"
                                                %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <hr style="background-color: #16f063;" />
                                        <div class="row">
                                            <div class="col d-xl-flex justify-content-xl-center">
                                                <%= f.submit "Filter", class: "btn btn-primary d-xl-flex justify-content-xl-center", style: 'margin-right: 15px;' %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
