<div id="editListingModal" role="dialog" tabindex="-1" class="modal fade text-left show" style="margin-top: 20px;">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Listing</h4><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            </div>
            <%= form_for(@listing) do |f|  %>
            <div class="modal-body">
                <div class="container">
                    <div class="row" style="margin-top: 20px;">
                        <div class="col-lg-4">
                            <%= f.hidden_field :user_id, value: user_signed_in? ? current_user.id : nil %>
                            <%= f.text_field :listing_name, required: 'required', class: "roundedFormField col-lg-12" ,placeholder: "Property Name" %>
                        </div>
                        <div class="col-lg-4">
                            <%= f.select :home_type, raw("
                            <option value='Condominium' selected>Condominium</option>
                            <option value='Resort'>Resort</option>
                            <option value='Hotel'>Hotel</option>
                            <option value='Beach House'>Beach House</option>
                            <option value='Apartment'>Apartment</option>
                            <option value='Capsule Room'>Capsule Room</option>
                            "), {}, style: "width: 330px", class: "roundedFormField" %>
                        </div>
                        <div class="col-lg-4">
                            <%= f.select :room_type, raw("
                            <option value='Entire' selected>Entire</option>
                            <option value='Private'>Private</option>
                            <option value='Shared'>Shared</option>
                            "), {}, style: "width: 330px", class: "roundedFormField" %>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px;">
                        <div class="col-lg-4">
                            <%= f.select :accomodate, raw("
                            <option value='1 ' selected>1 Guest</option>
                            <option value='2'>2 Guests</option>
                            <option value='3'>3 Guests</option>
                            <option value='4'>4+ Guests</option>
                            "), {}, style: "width: 330px", class: "roundedFormField" %>
                        </div>
                        <div class="col-lg-4">
                             <%= f.select :bedroom_count, raw("
                            <option value='1' selected>1 Bedroom</option>
                            <option value='2'>2 Bedrooms</option>
                            <option value='3'>3 Bedrooms</option>
                            <option value='4'>4+ Bedrooms</option>
                            "), {}, style: "width: 330px", class: "roundedFormField" %>
                        </div>
                        <div class="col-lg-4">
                             <%= f.select :bathroom_count, raw("
                            <option value='1' selected>1 Bathroom</option>
                            <option value='2'>2 Bathrooms</option>
                            <option value='3'>3 Bathrooms</option>
                            <option value='4'>4+ Bathrooms</option>
                            "), {}, style: "width: 330px", class: "roundedFormField" %>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px;">
                        <div class="col">
                            <%= f.text_area :listing_description, class: "roundedFormField" ,placeholder: "Property Description", required: true, style: "min-width: 1073px; height: 150px" %>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px;">
                        <div class="col-lg-12">
                            <%= f.number_field :price, required: 'required', class: "roundedFormField col-lg-12" ,placeholder: "Price Per Night" %>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px;">
                        <div class="col">
                            <h3>Facilities &amp; Amenities</h3>
                            <hr />
                            <div class="row">
                                <div class="col">
                                    <div class="form-check">
                                        <%= f.check_box :has_internet, class: "form-check-input" %>
                                        <label class="form-check-label" for="formCheck-1">WiFi & Internet Connection</label>
                                    </div>
                                    <div class="form-check">
                                        <%= f.check_box :has_tv, class: "form-check-input" %>
                                        <label class="form-check-label" for="formCheck-2">TV</label>
                                    </div>
                                    <div class="form-check">
                                        <%= f.check_box :has_kitchen, class: "form-check-input" %>
                                        <label class="form-check-label" for="formCheck-3">Kitchen</label>
                                    </div>
                                    <div class="form-check">
                                        <%= f.check_box :has_heating, class: "form-check-input" %>
                                        <label class="form-check-label" for="formCheck-4">Heating</label>
                                    </div>
                                    <div class="form-check">
                                        <%= f.check_box :has_air_conditioning, class: "form-check-input" %>
                                        <label class="form-check-label" for="formCheck-1">Air conditioner</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> 
                    <div class="row" style="margin-top: 20px;">
                        <div class="col">
                            <h3>Location</h3>
                            <hr />
                            <div class="row">
                                <div class="col">
                                <%= f.text_field :address, class: "col-lg-12 roundedFormField", required: true ,placeholder: "Location" %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px;">
                        <div class="col">
                            <h3>Images</h3>
                            <hr />
                            <div class="row">
                                <div class="col">
                                    <input type="file" multiple accept="image/*" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= f.submit "Update", class: "btn btn-outline-info roundedButton", style: "margin-right: 20px;" %>
            </div>
            <% end %>
        </div>
    </div>
</div>