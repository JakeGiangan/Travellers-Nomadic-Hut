<% provide(:title, "Listing Photos") %>
<div class="container" style="margin-top: 100px;">
    <div class="row">
        <%= render'sidebar' %>
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Photos</h5>
                </div>
                <div class="card-body">
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col"><input type="file" /></div>
                    </div>
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col col-lg-4"><img /></div>
                        <div class="col col-lg-4"><img /></div>
                        <div class="col col-lg-4"><img /></div>
                    </div>
                    <div class="row">
                        <div class="col"><button class="btn btn-primary col-lg-12" type="button">Save</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
