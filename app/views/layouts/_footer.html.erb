<div class="d-none d-lg-block">
    <footer class="footer">
        <div class="container">
            <div class="footerContent">
                <div class="text-center">
                    <h4 class="text-white">Traveller's Nomadic Hut</h4>
                </div>
            </div>
        </div>
    </footer>
</div>

<div class="d-lg-none">
    <footer class="mobile-footer">
        <% if user_signed_in? %>
            <div class="row">
                <table class="table table-borderless mx-5">
                    <tbody>
                        <tr>
                            <td class="text-center my-2"><%= link_to raw("<h3><i class='fa fa-user-circle'></i><br/>Profile</h3"), user_path(current_user.id), class: "text-white"%></td>
                            <td class="text-center my-2"><%= link_to raw("<h3><i class='fa fa-tachometer-alt'></i><br/>Dashboard</h3"), hosting_dashboard_url, class: "text-white"%></td>
                            <td class="text-center my-2"><%= link_to raw("<h3><i class='fa fa-home'></i><br/>User Listings</h3"), listings_url, class: "text-white"%></td>
                            <td class="text-center my-2"><%= link_to raw("<h3><i class='fa fa-book'></i><br/>User Bookings</h3"), bookings_url, class: "text-white"%></td>
                            <td class="text-center my-2"><%= link_to raw("<h3><i class='fa fa-sign-out-alt'></i><br/>Logout</h3"), destroy_user_session_path, class: "text-white", method: :delete %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        <% else %>
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <table class="table table-borderless mx-2">
                        <tbody>
                            <tr>
                                <td class="text-center"><%= link_to raw("<h3><i class='fa fa-home'></i><br/>Home</h3>"), root_url, class: "text-white" %></td>
                                <td class="text-center"><%= link_to raw("<h3><i class='fa fa-sign-in-alt'></i><br/>Login</h3>"), new_user_session_path, class: "text-white" %></td>
                                <td class="text-center"><%= link_to raw("<h3><i class='fas fa-user'></i><br/>Sign up</h3>"), new_user_registration_url, class: "text-white" %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        <% end %>
    </footer>
</div>