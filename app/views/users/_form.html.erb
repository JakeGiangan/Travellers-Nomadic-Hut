<%= form_for(@user) do |f|  %>
  <div class="row fieldRowSpace" >
    <div class="col">
      <%= f.text_field :first_name, class: "roundedFormField" ,placeholder: "First Name", style: "min-width: 300px" %>
    </div>
    <div class="col">
      <%= f.text_field :last_name, class: "roundedFormField" ,placeholder: "Last Name", style: "min-width: 300px" %>
    </div>
    <div class="col">
      <%= f.date_field :birthdate, class: "roundedFormField", style: "min-width: 300px" %>
    </div>
  </div>
  <div class="row fieldRowSpace" >
    <div class="col">
      <%= f.text_field :languages, class: "roundedFormField" ,placeholder: "Spoken Languages", style: "min-width: 300px" %>
    </div>
    <div class="col">
      <%= f.email_field :email, class: "roundedFormField" ,placeholder: "Email Address", style: "min-width: 300px" %>
    </div>
    <div class="col">
      <%= f.number_field :contact_number, class: "roundedFormField" ,placeholder: "Contact Number", style: "min-width: 300px" %>
    </div>
  </div>
  <div class="row fieldRowSpace" >
    <div class="col">
      <%= f.password_field :password, class: "roundedFormField" ,placeholder: "Password", style: "min-width: 300px" %>
    </div>
    <div class="col">
      <%= f.password_field :password_confirmation, class: "roundedFormField" ,placeholder: "Password", style: "min-width: 300px" %>
    </div>
    <div class="col">
      <input type="text" disabled placeholder="upload photo here" style="width: 300px;" />
      <%= f.hidden_field :account_type, value: 1 %>
    </div>
  </div>
  <div class="row fieldRowSpace" >
    <div class="col d-xl-flex justify-content-xl-center">
        <%= f.submit "Sign up", class: "btn btn-outline-success roundedButton", style: "margin-right: 20px;" %>
        <%= link_to "Cancel", root_url,class: "btn btn-outline-danger roundedButton", style: "margin-left: 20px;" %>
    </div>
  </div>
<% end %>