<% provide(:title, "Home") %>
<div class="parallax">
    <div class="caption">
        <span class="text-white"><h1 class="MontserratFont">Travelling and Living <br/> made Simple and Elegant </h1></span>
    </div>
</div>

<div class="col-l-12 d-flex justify-content-center callToAction">
    <%= form_tag search_path, :method => :get do %>
        <div class="row col-lg-12 d-flex justify-content-center">
            <%= text_field :search, params[:search], class: "col-lg-12 roundedFormField", placeholder: "Location Address", style: "margin-top: 40px; margin-bottom: 15px;" %>
            <%= submit_tag "Lets find a place to stay...", class: "btn roundedGreenButton callToActionButton" %>
        </div>
    <% end %>
</div>

<div class="container-fluid">
    <div class="offset-lg-2">
        <div class="row" style="margin-bottom: 50px;">
            <div class="col col-lg-5">
            <h1 style="margin-top: 50px;">Home Gallery</h1>
            <hr style="background-color: #16f063;height: 15px; width:500px;margin-left: 0px;" />
            <div class="row" style="margin-top: 125px">
                <div class="col">
                    <%= image_tag('home/1.jpg', class:'firstImage')%>
                </div>
            </div>
            </div>
            <div class="col col-lg-5">
                <div class="row">
                    <div class="col">
                        <%= image_tag('home/2.jpg', class:'secondImage') %>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <%= image_tag('home/3.jpg', class:'thirdImage') %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>