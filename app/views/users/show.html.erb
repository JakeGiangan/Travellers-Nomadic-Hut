<% provide(:title, "Profile") %>

<div class="container MontserratFont" style="margin-top: 100px; margin-bottom: 100px">
    <div class="col">
        <div class="row">
            <div class="col-xl-2">
                <div class="row">
                    <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                        <%= gravatar_for @user, size: 150 %>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-lg-10">
                        <p>Facebook</p>
                        <p>Phone Number</p>
                    </div>
                    <div class="col=lg-1">
                        <p><% if @user.provider == 'facebook' %><i class="fa fa-check-circle text-success"></i><%else%><i class="fa fa-times-circle text-danger"></i> <% end %></p>
                        <p><% unless @user.contact_number.nil? %><i class="fa fa-check-circle text-success"></i><%else%><i class="fa fa-times-circle text-danger"></i><% end %></p>
                    </div>
                    </div>
            </div>
            <div class="col">
                <div class="row">
                    <div class="col">
                        <h1><%= @user.name %></h1>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p class="text-right"><strong>Email:</strong>&nbsp;<%= @user.email %></p>
                    </div>
                    <div class="col">
                        <p><strong>Contact Number:</strong>&nbsp;<%= @user.contact_number %></p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col d-xl-flex justify-content-xl-end">
                        <%= link_to raw("<i class='fa fa-pen'></i> Edit Profile"), edit_user_registration_url(@user), class: "btn btn-outline-info roundedButton", style: "margin-right: 10px;"  %>
                        <%= link_to raw("<i class='fa fa-trash'></i>  Delete Account"), registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger roundedButton" %></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4>Listings (<%= @listing_list.count %>)</h4>
                <hr />
                <div class="row">
                    <div class="col">
                        <div class="card-group">
                        <% @listing_list.each do |listing_item| %>
                            <div class="col-lg-3">
                                <div class="card">
                                    <% if listing_item.images.present? %>
                                        <%= link_to image_tag(listing_item.images.first.image, class: "card-img-top w-100 d-block", style: "height: 200px;" ), listing_item%>
                                    <% else %>
                                        <p> No image found </p>
                                    <% end %>                                
                                    <div class="card-body">
                                        <h4 class="card-title"><%= link_to listing_item.listing_name, listing_item %></h4>
                                        <p class="card-text">$<%= listing_item.price %> - <%= listing_item.home_type %> - <%= listing_item.accomodate %></p>
                                        <p class="card-text">
                                            <span id="listing-reviews-average-stars-<%= listing_item.listing_name %>" class="d-xl-flex justify-content-xl-center" data-score="<%= fetch_review_score(listing_item) %>"></span>
                                            <script>
                                                $('#listing-reviews-average-stars-<%= listing_item.listing_name %>').raty({
                                                    readOnly: true,
                                                    score: function() {
                                                        return $(this).attr('data-score');
                                                    },
                                                    path: '/assets/'
                                                });
                                            </script>
                                        </p>
                                        <p class="card-text d-xl-flex justify-content-xl-center"><%= pluralize(fetch_reviews(listing_item).size, "Review", ) %></p>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col d-xl-flex justify-content-xl-center" style="margin-top: 25px;margin-bottom: 25px;">
                    <%= will_paginate @listing_list %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-bottom: 100px;">
            <div class="col">
            <hr />
                <div>
                    <ul class="nav nav-pills d-xl-flex justify-content-xl-center my-5">
                        <li class="nav-item mr-4"><a role="tab" data-toggle="pill" class="nav-link active" href="#tab-1">Reviews from Guests</a></li>
                        <li class="nav-item ml-4"><a role="tab" data-toggle="pill" class="nav-link" href="#tab-2">Reviews from Host</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="tab-1">
                            <div class="row">
                                <div class="col">
                                    <h4>Reviews from Guests (<%= @guest_reviews.size %>)</h4>
                                    <hr />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <% if @guest_reviews.size == 0 %>
                                    <div class="card">
                                            <div class="card-body">
                                                <div class="row">
                                                   <div class="col">
                                                        <p class="d-xl-flex justify-content-xl-center align-items-xl-center">No listings found </p>
                                                   </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% else %>
                                        <% @guest_reviews.each do |guest_review_item| %>
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-xl-2">
                                                            <div class="row">
                                                                <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                                                                    <%= gravatar_for guest_review_item.user, size: 60 %>
                                                                </div>
                                                            </div>
                                                            <div class="row mt-3">
                                                                <div class="col">
                                                                    <h6 class="text-center"><%= guest_review_item.user.name%></h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <h4>
                                                                        <span id="guest-review-stars_<%= guest_review_item.id %>" data-score="<%= guest_review_item.rating %>"></span>
                                                                        <script>
                                                                            $('#guest-review-stars_<%= guest_review_item.id %>').raty({
                                                                                readOnly: true,
                                                                                score: function() {
                                                                                    return $(this).attr('data-score');
                                                                                },
                                                                                path: '/assets/'
                                                                            });
                                                                        </script>
                                                                    </h4>
                                                                </div>
                                                            </div>
                                                            <h6><%= guest_review_item.booking.check_in_date.strftime("%B %d, %Y") %></h6>
                                                            <p><%= guest_review_item.content %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-xl-flex justify-content-xl-center">
                                   <%= will_paginate @guest_reviews %>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="tab-2">
                            <div class="row">
                                <div class="col">
                                    <h4>Reviews from Hosts (<%= @host_reviews.size %>)</h4>
                                    <hr />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <% if @host_reviews.size == 0 %>
                                    <div class="card">
                                            <div class="card-body">
                                                <div class="row">
                                                   <div class="col">
                                                        <p class="d-xl-flex justify-content-xl-center align-items-xl-center">No listings found </p>
                                                   </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% else %>
                                        <% @host_reviews.each do |host_review_item| %>
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-xl-2">
                                                            <div class="row">
                                                                <div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
                                                                    <%= gravatar_for host_review_item.user, size: 60 %>
                                                                </div>
                                                            </div>
                                                            <div class="row mt-3">
                                                                <div class="col">
                                                                    <h6 class="text-center"><%= host_review_item.user.name %></h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <span id="host-review-stars_<%= host_review_item.id %>" data-score="<%= host_review_item.rating %>"></span>
                                                                        <script>
                                                                            $('#host-review-stars_<%= host_review_item.id %>').raty({
                                                                                readOnly: true,
                                                                                score: function() {
                                                                                    return $(this).attr('data-score');
                                                                                },
                                                                                path: '/assets/'
                                                                            });
                                                                        </script>
                                                                </div>
                                                            </div>
                                                            <h6><%= host_review_item.booking.check_in_date.strftime("%B %d, %Y")%></h6>
                                                            <p><%= host_review_item.content %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-xl-flex justify-content-xl-center">
                                    <%= will_paginate @host_reviews %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
