<% provide(:title, "Profile") %>

<div class="container" style="margin-top: 100px; margin-bottom: 100px">
    <div class="row">
        <div class="col-xl-2 d-xl-flex justify-content-xl-center align-items-xl-center">
            <%# <img class="d-xl-flex" /> %>
            <i class="fa fa-5x fa-user-circle"> </i>
        </div>
        <div class="col-xl-9">
            <div class="row">
                <div class="col-xl-12">
                    <h1><%= @user.first_name %> <%= @user.last_name %> </h1>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <p class="text-right">Email:</p>
                        </div>
                        <div class="col">
                            <p><%= @user.email %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="text-right">Languages</p>
                        </div>
                        <div class="col">
                            <p><%= @user.languages %></p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <p class="text-right">Contact Number:</p>
                        </div>
                        <div class="col">
                            <p><%= @user.contact_number %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="text-right">Birthdate:</p>
                        </div>
                        <div class="col">
                            <p><%= @user.birthdate %></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col d-xl-flex justify-content-xl-end" style="margin-top: 20px;">
                    <button class="btn btn-info roundedButton" type="button" style="margin-right: 10px;"><i class="fa fa-pen"></i> Edit Profile</button>
                    <button class="btn btn-danger roundedButton" type="button" style="margin-left: 10px;"><i class="fa fa-trash"></i>  Delete Account</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12" style="margin-top: 50px;">
            <h2>Booking History</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Column 1</th>
                            <th>Column 2</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Cell 1</td>
                            <td>Cell 2</td>
                        </tr>
                        <tr>
                            <td>Cell 3</td>
                            <td>Cell 4</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>