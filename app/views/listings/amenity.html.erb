<% provide(:title, "Listing Amenities") %>
<div class="container" style="margin-top: 100px;">
    <div class="row">
        <%= render'sidebar' %>
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Amenities</h5>
                </div>
                <div class="card-body">
                <%= form_for(@listing) do |f| %>
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col">
                            <div class="form-check">
                                <%= f.check_box :has_internet, class: "form-check-input" %>
                                <label class="form-check-label" for="formCheck-1">WiFi &amp; InternetÂ </label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <%= f.check_box :has_tv, class: "form-check-input" %>
                                <label class="form-check-label" for="formCheck-2">TV</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <%= f.check_box :has_kitchen, class: "form-check-input" %>
                                <label class="form-check-label" for="formCheck-3">Kitchen</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <%= f.check_box :has_heating, class: "form-check-input" %>
                                <label class="form-check-label" for="formCheck-4">Heating</label>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col">
                            <div class="form-check">
                                <%= f.check_box :has_air_conditioning, class: "form-check-input" %>
                                <label class="form-check-label" for="formCheck-5">Air Conditioner</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <%= f.submit "Save", class: "btn btn-primary col-lg-12 roundedButton" %>
                        </div>
                    </div>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</div>