<div class="col-xl-3">
    <%= search_form_for @search, url: search_path do |f| %>
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col">
                        <h4>Location</h4>
                        <hr style="background-color: #16f063;" />
                    </div>
                </div>
                <div class="row" style="margin-bottom: 15px;">
                    <div class="col-lg-12">
                        <%= f.search_field :address_matches, class: "col-lg-12 roundedFormField", placeholder: "Location Address", required: true, value: session[:address].blank? ? f.object.address_matches : session[:address] %>
                        <%= f.hidden_field :is_valid_cont, value: true %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col">
                        <h4>Price</h4>
                        <hr style="background-color: #16f063;" />
                    </div>
                </div>
                <div class="row" style="margin-bottom: 15px;">
                    <div class="col">
                        <%= f.number_field :price_gteq, class: "col-lg-12 roundedFormField", placeholder: "min price" %>
                    </div>
                    <div class="col">
                        <%= f.number_field :price_lteq, class: "col-lg-12 roundedFormField", placeholder: "max price" %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 15px;">
            <div class="col">
                <div class="row">
                    <div class="col">
                        <h4>Amenities</h4>
                        <hr style="background-color: #16f063;" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <%= f.check_box :has_internet_true ,class: "form-check-input" %>
                            <label class="form-check-label" for="formCheck-1">Internet &amp; WiFi</label>
                        </div>
                        <div class="form-check">
                            <%= f.check_box :has_tv_true ,class: "form-check-input" %>
                            <label class="form-check-label" for="formCheck-1">TV</label>
                        </div>
                        <div class="form-check">
                            <%= f.check_box :has_kitchen_true ,class: "form-check-input" %>
                            <label class="form-check-label" for="formCheck-1">Kitchen</label>
                        </div>
                        <div class="form-check">
                            <%= f.check_box :has_heating_true ,class: "form-check-input" %>
                            <label class="form-check-label" for="formCheck-1">Heating</label>
                        </div>
                        <div class="form-check">
                            <%= f.check_box :has_air_conditioning_true ,class: "form-check-input" %>
                            <label class="form-check-label" for="formCheck-1">Air Conditioner</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 15px;">
            <div class="col">
                <h4>House Type</h4>
                <hr style="background-color: #16f063;" />
                <div class="row">
                    <div class="col">
                        <%= f.select :home_type_eq, options_for_select([
                                ["Condominium"],
                                ["Resort"],
                                ["Hotel"],
                                ["Beach House"], 
                                ["Apartment"],
                                ["Capsule Room"]
                            ], selected: f.object.home_type_eq), {}, class: "roundedFormField col-lg-12", :prompt => "Select Value"
                        %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 15px;">
            <div class="col">
                <h4>Room Type</h4>
                <hr style="background-color: #16f063;" />
                <div class="row">
                    <div class="col">
                        <%= f.select :room_type_start, options_for_select([
                                ["Entire"],
                                ["Private"],
                                ["Shared"]
                            ], selected: f.object.room_type_start), {}, class: "roundedFormField col-lg-12", :prompt => "Select Value"
                        %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 15px;">
            <div class="col">
                <h4>Bedrooms</h4>
                <hr style="background-color: #16f063;" />
                <div class="row">
                    <div class="col">
                        <%= f.select :bedroom_count_eq, options_for_select([
                                ["1 Bedroom", 1],
                                ["2 Bedrooms", 2],
                                ["3 Bedrooms", 3],
                                ["4+ Bedrooms", 4]
                            ], selected: f.object.bedroom_count_eq), {}, class: "roundedFormField col-lg-12", :prompt => "Select Value"
                        %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 15px;">
            <div class="col">
                <h4>Bathrooms</h4>
                <hr style="background-color: #16f063;" />
                <div class="row">
                    <div class="col">
                        <%= f.select :bathroom_count_eq, options_for_select([
                                ["1 Bathroom", 1],
                                ["2 Bathrooms", 2],
                                ["3 Bathrooms", 3],
                                ["4+ Bathrooms", 4]
                            ], selected: f.object.bathroom_count_eq), {},  class: "roundedFormField col-lg-12"
                        %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 15px;">
            <div class="col">
                <h4>Accomodation</h4>
                <hr style="background-color: #16f063;" />
                <div class="row">
                    <div class="col">
                        <%= f.select :accomodate_eq, options_for_select([
                                ["1 Guest", 1],
                                ["2 Guests", 2],
                                ["3 Guests", 3],
                                ["4+ Guests", 4]
                            ], selected: f.object.accomodate_eq), {}, class: "roundedFormField col-lg-12"
                        %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <hr style="background-color: #16f063;" />
                <div class="row">
                    <div class="col d-xl-flex justify-content-xl-center">
                        <%= f.submit "Filter", class: "btn btn-primary d-xl-flex justify-content-xl-center", style: 'margin-right: 15px;' %>
                         <%= link_to "Reset", listings_url, class: "btn btn-danger d-xl-flex justify-content-xl-center", style: 'margin-left: 15px;' %>
                    </div>
                </div>
            </div>
        </div>    
    <% end %>
</div>