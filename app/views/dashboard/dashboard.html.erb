<% provide(:title, "Host Dashboard") %>
<div class="container-fluid">
    <div class="row">
        <%= render 'layouts/navigation' %>
        <div class="col">
            <div class="d-none d-lg-block">
            <h2 class="mt-5 pt-5">Dashboard</h2>
            <hr />
            <h3>Current Bookings</h3>
                <div class="row mx-5">
                    <div class="col-lg-6 col-md-6">
                        <div class="card" style="background-color: #16f063;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-9">
                                        <i class="fa fa-book fa-2x d-flex justify-content-end"></i>
                                        <h6 class="text-right text-muted">Number of Listings</h6>
                                    </div>
                                    <div class="col-lg-3">
                                        <h1 class="text-right text-white"><%= @booked %> </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="card"  style="background-color: #16f063;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-9">
                                        <i class="fa fa-check fa-2x d-flex justify-content-end"></i>
                                        <h6 class="text-right text-muted">Completed Bookings</h6>
                                    </div>
                                    <div class="col-lg-3">
                                        <h1 class="text-right text-white"><%= @completed %> </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-lg-none">
            <h2 class="mt-3 pt-3">Dashboard</h2>
            <hr />
            <h3>Current Bookings</h3>
                <div class="row">
                    <div class="col-sm-6 px-4 py-3">
                        <div class="card" style="background-color: #16f063;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-9 col-xs-9">
                                        <i class="fa fa-book fa-2x d-flex justify-content-end"></i>
                                        <h6 class="text-right text-muted">Number of Listings</h6>
                                    </div>
                                    <div class="col-sm-3 col-xs-3">
                                        <h1 class="justify-content-end text-white"><%= @booked %> </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 px-4 py-3">
                        <div class="card"  style="background-color: #16f063;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-9 col-xs-9">
                                        <i class="fa fa-check fa-2x d-flex justify-content-end"></i>
                                        <h6 class="text-right text-muted">Completed Bookings</h6>
                                    </div>
                                    <div class="col-sm-3 col-xs-3">
                                        <h1 class="justify-content-end text-white"><%= @completed %> </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>