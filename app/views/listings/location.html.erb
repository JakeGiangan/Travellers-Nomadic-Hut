<% provide(:title, "Listing Location") %>
<div class="container" style="margin-top: 100px;">
    <div class="row">
        <%= render'sidebar' %>
        <div class="col-xl-8 col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Location</h5>
                </div>
                <%= form_for(@listing) do |f| %>
                    <div class="card-body">
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col">
                                <%= f.text_field :address, class: "col-lg-12 roundedFormField", required: true ,placeholder: "Location" %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <%= f.submit "Save", class: "btn btn-primary col-lg-12 roundedButton" %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
