<div role="tabpanel" class="tab-pane fade show active" id="tab-1">
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <h3>Description</h3>
                    <hr />
                    <p class="MontserratFont">
                    <em> <strong> House Type: </strong> </em> &nbsp <%=  @listing.home_type %>  <br />
                    <em> <strong> Room Type: </strong> </em> &nbsp <%=  @listing.room_type %> 
                    </p>
                    <p class="MontserratFont"> <%= @listing.listing_description%> </p>                    
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h3>Details</h3>
                    <hr />
                    <div class="row MontserratFont">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 d-flex justify-content-center">
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-home d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center text-break">
                                <%= @listing.home_type %></p>
                            </div>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-user d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center">
                                <%= pluralize(@listing.accomodate, "Guest") %></p>
                            </div>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-bed d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center"><%= pluralize(@listing.bedroom_count, "Bedroom") %></p>
                            </div>
                            <div class="border rounded border-dark amenitiesIcons">
                                <i class="fa fa-shower d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                <p class="text-center">
                                <%= pluralize(@listing.bathroom_count, "Bathroom") %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <h3>Facilities & Amenities</h3>
                    <hr />
                    <div class="row MontserratFont">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 d-flex justify-content-center">
                            <% if @listing.has_internet %>
                                <div class="border rounded border-dark amenitiesIcons">
                                    <i class="fa fa-wifi d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                    <p class="text-center">Has Wifi Connection</p>
                                </div>
                            <% end %>
                            <% if @listing.has_tv %>
                                <div class="border rounded border-dark amenitiesIcons">
                                    <i class="fa fa-swimming-pool d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                    <p class="text-center">Has TV</p>
                                </div>
                            <% end %>
                            <% if @listing.has_heating %>
                                <div class="border rounded border-dark amenitiesIcons">
                                    <i class="fa fa-mitten d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                    <p class="text-center">Heating</p>
                                </div>
                            <% end %>
                            <% if @listing.has_kitchen %>
                                <div class="border rounded border-dark amenitiesIcons">
                                    <i class="fa fa-utensils d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                    <p class="text-center">Has kitchen</p>
                                </div>
                            <% end %>
                            <% if @listing.has_air_conditioning %>
                                <div class="border rounded border-dark amenitiesIcons">
                                    <i class="fa fa-fan d-flex justify-content-center fa-3x" style="color: rgb(0,0,0);margin-top: 10px;"></i>
                                    <p class="text-center">Air conditioning</p>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% if current_user.id != @listing.user_id%>
            <div class="col">
                <%= render'booking' %>
            </div>
        <% end %>
    </div>
    <div class="row" style="margin-top: 20px;margin-bottom: 130px;">
        <div class="col">
            <h3>Location</h3>
            <hr />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div id="map" style="min-width:500px; "></div>
                </div>
            </div>
        </div>
    </div>
</div>
