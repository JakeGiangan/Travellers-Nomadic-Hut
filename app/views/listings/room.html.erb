<% provide(:title, "Listing Information") %>
<div class="container" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="row">
        <%= render'sidebar' %>
        <div class="col-xl-8 col-md-8">
            <%= form_for(@listing) do |f| %>
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Room</h5>
                    </div>
                    <div class="card-body">
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col">
                                <%= f.select :home_type, options_for_select([
                                        ["Condominium"],
                                        ["Resort"],
                                        ["Hotel"],
                                        ["Beach House"], 
                                        ["Apartment"],
                                        ["Capsule Room"]
                                    ], selected: f.object.home_type), {}, class: "roundedFormField col-lg-12"
                                %>
                            </div>
                            <div class="col">
                                <%= f.select :room_type, options_for_select([
                                        ["Entire"],
                                        ["Private"],
                                        ["Shared"]
                                    ], selected: f.object.room_type), {}, class: "roundedFormField col-lg-12"
                                %>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col">
                                <%= f.select :accomodate, options_for_select([
                                        ["1 Guest", 1],
                                        ["2 Guests", 2],
                                        ["3 Guests", 3],
                                        ["4+ Guests", 4]
                                    ], selected: f.object.accomodate), {}, class: "roundedFormField col-lg-12"
                                %>
                            </div>
                            <div class="col">
                                <%= f.select :bedroom_count, options_for_select([
                                        ["1 Bedroom", 1],
                                        ["2 Bedrooms", 2],
                                        ["3 Bedrooms", 3],
                                        ["4+ Bedrooms", 4]
                                    ], selected: f.object.bedroom_count), {},  class: "roundedFormField col-lg-12"
                                %>
                            </div>
                            <div class="col">
                                <%= f.select :bathroom_count, options_for_select([
                                        ["1 Bathroom", 1],
                                        ["2 Bathrooms", 2],
                                        ["3 Bathrooms", 3],
                                        ["4+ Bathrooms", 4]
                                    ], selected: f.object.bathroom_count), {},  class: "roundedFormField col-lg-12"
                                %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <%= f.submit "Save", class: "btn btn-primary col-lg-12 roundedButton" %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
