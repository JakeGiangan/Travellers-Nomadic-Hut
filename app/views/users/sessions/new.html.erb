<% provide(:title, "Log in") %>
<div>
    <div class="loginHeadingBG d-flex justify-content-end align-middle">
        <span class="text-white mt-5 pt-5"><h1 class="MontserratFont mt-5 pt-5 mr-5 pr-5">Welcome back!</h1></span>
    </div>
    <div class="container">
        <div class="row">
            <div class="col MontserratFont">
                <h1 style="margin-top: 40px;">Login</h1>
                <hr />
            </div>
        </div>
        <div class="col-lg-8 offset-lg-2">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="row my-3" >
                    <div class="col">
                        <%= f.text_field :email, class: "roundedFormField" ,placeholder: "Email Address", style: "min-width: 300px" %>
                    </div>
                    <div class="col">
                        <%= f.password_field :password, class: "roundedFormField" ,placeholder: "Password", style: "min-width: 300px" %>
                    </div>
                </div>
                <div class="row my-3 text-center">
                    <p>New here?  <%= link_to "Sign up", new_user_registration_url, class: "greenText" %> now!</p>
                </div>
                <div class="row my-3">
                    <div class="col d-flex justify-content-center">
                        <%= f.submit "Login", class: "btn btn-outline-success roundedButton", style: "margin-right: 20px;" %>
                        <%= link_to "Cancel", root_url,class: "btn btn-outline-danger roundedButton", style: "margin-left: 20px;" %>
                    </div>
                </div>
                <div class="row my-5" style="margin-bottom: 100px">
                    <div class="col d-flex justify-content-center">
                        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-outline-primary roundedButton mb-5" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
